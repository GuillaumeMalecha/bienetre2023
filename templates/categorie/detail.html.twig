{% extends 'base.html.twig' %}

{% block title %}Informations de la catégorie de service {{ categorie.nom }}{% endblock %}

{% block body %}

<section class="spd-wrap">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-md-12">

                <div class="slide-property-detail">

                    <div class="slide-property-first">
                        <div class="listname-into">
                            <h2>{{ categorie.nom }} <span class="prt-type rent">Catégorie à afficher</span></h2>
                            <span><i class="lni-map-marker"></i>Adresse à afficher</span>
                            <h4>Description : {{ categorie.description }}</h4>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</section>

    <div class="container">
        <div class="row">

            <a href="{{ path('modifiercategorie', {id: categorie.id}) }}">
                <button type="button" class="btn btn-info">Modifier la catégorie</button>
            </a>
            <a href="{{ path('supprimercategorie', {id: categorie.id}) }}">
                <button type="button" class="btn btn-danger">Supprimer la catégorie</button>
            </a>

        </div>
    </div>
{% endblock %}
