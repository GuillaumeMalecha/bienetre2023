{% extends 'base.html.twig' %}

{% block title %}Informations de la catégorie de service {{ categorie.nom }}{% endblock %}

{% block body %}

    <div class="image-cover search-header-banner" style="background:url('assets/img/pattern.png') no-repeat;"
         data-overlay="6">
        <div class="container">
            <h1 class="big-header-capt">Résultats de la recherche</h1>

            <div class="full-search-2 italian-search hero-search-radius box-style mb-4">
                <div class="hero-search-content">
                    <form class="row" method="POST" action="{{ path('recherche') }}">
                        <div class="col-lg-4 col-md-4 col-sm-12 small-padd">
                            <div class="form-group">
                                <div class="input-with-icon">
                                    <input type="text" name="nom" class="form-control b-r"
                                           placeholder="Nom du prestataire">
                                    <i class="theme-cl ti-search"></i>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-3 col-sm-12 small-padd">
                            <div class="form-group">
                                <div class="input-with-icon">
                                    <input type="text" name="localite" class="form-control b-r" placeholder="Localité">
                                    <i class="theme-cl ti-target"></i>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-3 col-sm-6 small-padd">
                            <div class="form-group">
                                <div class="input-with-icon">
                                    <select id="list-category" name="categorie" class="form-control">
                                        <option value="">&nbsp;</option>
                                        {% for categorie in categories %}
                                            <option value="{{ categorie.id }}">{{ categorie.nom }}</option>
                                        {% endfor %}
                                    </select>
                                    <i class="theme-cl ti-list"></i>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-2 col-md-2 col-sm-12 small-padd">
                            <div class="form-group">
                                <div class="form-group">
                                    <button type="submit" class="btn search-btn">Recherche</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- ============================ Fin de la recherche ================================== -->


<section class="image-cover hero-banner" style="background:url(https://picsum.photos/1920/1000) no-repeat;"
         data-overlay="6">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="loving-modern-login">
                <h2>{{ categorie.nom }} </h2>
                <p>Description : {{ categorie.description }}</p>
                    {% if is_granted('ROLE_ADMIN') == true %}
                <a href="{{ path('modifiercategorie', {id: categorie.id}) }}">
                    <button type="button" class="btn btn-info">Modifier la catégorie</button>
                </a>
                <a href="{{ path('supprimercategorie', {id: categorie.id}) }}">
                    <button type="button" class="btn btn-danger">Supprimer la catégorie</button>
                </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

</section>
    <section class="theme-bg lttop-title">
        <div class="container">

            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="sec-heading center light mb-5">
                        <h3>Liste des Prestataires présents dans la catégorie {{ categorie.nom }} :</h3>
                    </div>
                </div>
            </div>

        </div>
        <div class="title__curve"></div>
    </section>
    <section>

        <div class="container">
            <br>
            <ul>
                {% for prestataire in prestataires %}
                    <i class="fas fa-bookmark"></i>
                    <h4>Nom du prestataire : {{ prestataire.nom }}</h4>
                    <p>Contact : {{ prestataire.emailcontact }} - {{ prestataire.numtel }} - {{ prestataire.siteinternet }}</p>
                    <p>Numéro de TVA : {{ prestataire.numtva }} </p>
                    <a href="{{ path ("detailprestataire", {id:prestataire.id}) }}"><button type="button" class="btn btn-warning">En savoir plus</button></a>
                    <br>
                    <br>

                {% endfor %}
            </ul>
        </div>

    </section>


{% endblock %}
