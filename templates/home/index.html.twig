                                            <option value="{{ categorie.id }}">{{ categorie.nom }}</option>
                                        {% endfor %}
                                    </select>
                                    <i class="ti-list"></i>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-2 col-md-2 col-sm-12 small-padd">
                            <div class="form-group">
                                <div class="form-group">
                                    <a href="{{ path('recherche') }}" class="btn search-btn">Recherche</a>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

            </div>

